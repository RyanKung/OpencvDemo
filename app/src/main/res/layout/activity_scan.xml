<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".old.ScanActivity">

    <com.example.administrator.opencvdemo.carame.CameraPreview
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.example.administrator.opencvdemo.old.MarkView1
        android:id="@+id/markView"
        android:layout_width="match_parent"
        android:layout_height="250dp" />


    <Button
        android:layout_width="wrap_content"
        android:text="拍摄"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/takePhoto"
        android:onClick="shiBie"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/img"
        android:maxHeight="300dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:onClick="toMain"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="toMain"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvResult"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/takePhoto"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>