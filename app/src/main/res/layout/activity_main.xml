<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.6:1" />

    <EditText
        android:id="@+id/lengName"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="id3" />
    <EditText
        android:layout_width="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/et_thresh"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1"
        android:layout_height="60dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="识别"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <Button
        android:id="@+id/preBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上一条"
        app:layout_constraintTop_toBottomOf="@+id/btn" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一条"
        app:layout_constraintTop_toBottomOf="@+id/preBtn" />
    <Button
        android:id="@+id/compressBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="压缩"
        app:layout_constraintTop_toBottomOf="@+id/nextBtn" />

    <EditText
        android:layout_width="150dp"
        app:layout_constraintTop_toBottomOf="@+id/et_thresh"
        android:id="@+id/et_width"
        android:text="14"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_height="60dp"/>
    <EditText
        android:layout_width="150dp"
        app:layout_constraintTop_toBottomOf="@+id/nextBtn"
        android:id="@+id/et_type"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:text="1"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_crop" />

    <ImageView
        android:id="@+id/img_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nextBtn" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/resultText"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>